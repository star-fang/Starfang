<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/create_item_kor"
            android:gravity="center"
            android:textSize="20sp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:background="#30000000"
            android:weightSum="3">

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_item_grade"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_item_category_main"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spinner_item_category_sub"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent" />

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_all_items"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/dialog_add_item_cell"
            />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:id="@+id/text_dialog_add_item_info"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="150dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:id="@+id/text_dialog_add_item_desc"
            android:layout_width="150dp"
            android:layout_height="match_parent" />

    </RelativeLayout>
</LinearLayout>