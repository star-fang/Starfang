<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="210dp"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="#30000000"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="장수 효과" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_hero_grades"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ogq4_background"
        tools:itemCount="2"
        tools:listitem="@layout/dialog_heroes_cell_spec_cell" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/title_spec_score_holder" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_dialog_heroes_cell_specs_total"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:text="300" />
    </LinearLayout>

</LinearLayout>