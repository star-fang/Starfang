<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="75dp"
    android:layout_height="95dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_margin="5dp"
    android:focusable="true"
    android:clickable="true"
    android:background="@drawable/rect_focused"
    android:focusableInTouchMode="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#000">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/star_filled"
            android:textSize="13sp"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_cell_title_item_grade"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:text="전용"
            android:textSize="13sp"
            android:layout_marginEnd="8dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/plus"
            android:textSize="13sp"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_cell_title_item_reinforce"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="13sp"
            android:maxLines="1"
            tools:text="12"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_cell_title_item_name"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:textAlignment="center"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="#FFF"
        tools:text="관우의 청룡언월도" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#000">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:text="@string/wear_kor"
            android:layout_marginEnd="2dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:gravity="center"
            android:text="@string/colon"
            android:layout_marginEnd="2dp"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_cell_title_item_who_has"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="#FFF"
        tools:text="관우" />

    </LinearLayout>
</LinearLayout>