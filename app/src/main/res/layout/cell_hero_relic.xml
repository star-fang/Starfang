                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    tools:text="저"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/rect_black"
                    android:layout_margin="2dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_relic2_level_slot2"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    tools:text="lv5"
                    android:gravity="center"
                    android:background="@drawable/rect_black"
                    android:layout_margin="2dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rect_button">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_relic3_prefix_slot2"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:gravity="center"
                    tools:text="숭고한"
                    android:background="@drawable/rect_black"
                    android:layout_margin="2dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_relic3_suffix_slot2"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    tools:text="방"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/rect_black"
                    android:layout_margin="2dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_relic3_level_slot2"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    tools:text="lv5"
                    android:gravity="center"
                    android:background="@drawable/rect_black"
                    android:layout_margin="2dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rect_button">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_relic4_prefix_slot2"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:gravity="center"
                    tools:text="강인한"
                    android:background="@drawable/rect_black"
                    android:layout_margin="2dp"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_relic4_suffix_slot2"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    tools:text="기"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:background="@drawable/rect_black"
                    android:layout_margin="2dp"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_relic4_level_slot2"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    tools:text="lv5"
                    android:gravity="center"
                    android:background="@drawable/rect_black"
                    android:layout_margin="2dp"/>
            </LinearLayout>


        </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/layout_hero_relic_combination"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_alignParentStart="true"
            android:gravity="center">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/slot_kor"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_relic_slot_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                tools:text="1"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_relic_slot_combination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="15sp"
                tools:text="감전 책략" />
        </LinearLayout>

</RelativeLayout>