<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="30dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="기준 1"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner_sort_heroes1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:entries="@array/pref_list_table" />

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner_sort_heroes2"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/spinner_sort_heroes1"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        tools:text="교본작 전"/>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner_sort_heroes3"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/spinner_sort_heroes2"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        tools:text="무력"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_delete_sort_heroes"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:background="@drawable/ic_delete_forever_black_24dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"/>


</RelativeLayout>