<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="65dp"
    android:layout_height="120dp"
    android:orientation="vertical"
    android:layout_marginStart="5dp"
    android:background="@drawable/bottom_border_gray_1dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/level"
            android:gravity="center"
            />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_hero_level"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:text="100"
        android:textSize="18sp"
        android:gravity="center"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_hero_branch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="검사"
            android:gravity="center"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/branch_grade_suffix_kor"/>

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_hero_branch_grade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="검술가"
        android:textSize="12sp"
        android:gravity="center"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_hero_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="조조"
        android:textSize="17sp"
        android:gravity="center"
        />



</LinearLayout>