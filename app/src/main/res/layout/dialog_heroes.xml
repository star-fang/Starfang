<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:minWidth="300dp"
    android:minHeight="400dp">

    <LinearLayout
        android:id="@+id/header_hero_dialog"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dialog_title_branch"
            android:layout_width="80dp"
            android:layout_height="30dp"
            tools:text="전차"
            android:textSize="20sp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dialog_title_name"
            android:layout_width="80dp"
            android:layout_height="30dp"
            tools:text="고순"
            android:textSize="20sp"/>

    </LinearLayout>

    <com.google.android.flexbox.FlexboxLayout
        android:layout_centerHorizontal="true"
        android:layout_below="@id/header_hero_dialog"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:flexDirection="row"
        app:flexWrap="wrap"
        app:justifyContent="center"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="@string/title_grade_kor"/>
                </LinearLayout>
        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/seekbar_hero_grade"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:progress="3"
            android:max="4"
            />


                <LinearLayout
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="start">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_seekbar_hero_grade_value"
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    tools:text="4"
                    android:gravity="center"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    tools:text="단계"
                    android:gravity="center"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginStart="5dp"
                    android:id="@+id/text_seekbar_hero_grade"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    tools:text="철거병"
                    android:gravity="center"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="70dp"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text="@string/title_level_kor"/>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/seekbar_hero_level"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:progress="80"
                    android:max="98"
                    />


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_seekbar_hero_level_value"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    tools:text="80"/>

            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="5dp"
            android:background="#30000000">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_title_plus_stat"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/title_stat_1"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:id="@+id/text_base_plus_stat1"
                        tools:text="100"/>

            <androidx.appcompat.widget.AppCompatSeekBar
                android:id="@+id/seekbar_hero_stat1"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:progress="60"
                android:max="80"/>

                <LinearLayout
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_seekbar_hero_stat1_cur"
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:maxLines="1"
                    android:textSize="12sp"
                    android:gravity="center"
                    tools:text="60"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/value_by_max_holder"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_seekbar_hero_stat1_mx"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:gravity="center"
                        tools:text="80"/>



                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/title_stat_2"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/text_base_plus_stat2"
                    tools:text="80"/>

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/seekbar_hero_stat2"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:progress="80"
                    android:max="80"/>

                <LinearLayout
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_seekbar_hero_stat2_cur"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:gravity="center"
                        tools:text="80"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/value_by_max_holder"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_seekbar_hero_stat2_mx"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:gravity="center"
                        tools:text="80"/>



                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/title_stat_3"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/text_base_plus_stat3"
                    tools:text="66"/>

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/seekbar_hero_stat3"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:progress="55"
                    android:max="80"/>

                <LinearLayout
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_seekbar_hero_stat3_cur"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:gravity="center"
                        tools:text="55"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/value_by_max_holder"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_seekbar_hero_stat3_mx"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:gravity="center"
                        tools:text="80"/>



                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/title_stat_4"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/text_base_plus_stat4"
                    tools:text="22"/>

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/seekbar_hero_stat4"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:progress="50"
                    android:max="80"/>

                <LinearLayout
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_seekbar_hero_stat4_cur"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:gravity="center"
                        tools:text="50"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/value_by_max_holder"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_seekbar_hero_stat4_mx"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:gravity="center"
                        tools:text="80"/>



                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/title_stat_5"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:id="@+id/text_base_plus_stat5"
                    tools:text="66"/>

                <androidx.appcompat.widget.AppCompatSeekBar
                    android:id="@+id/seekbar_hero_stat5"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:progress="10"
                    android:max="80"/>

                <LinearLayout
                    android:layout_width="55dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_seekbar_hero_stat5_cur"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:gravity="center"
                        tools:text="10"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="5dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/value_by_max_holder"/>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_seekbar_hero_stat5_mx"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:textSize="12sp"
                        android:gravity="center"
                        tools:text="80"/>



                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text="@string/subtitle_plus_stat"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginStart="10dp"
                    android:id="@+id/text_sum_of_plus_stat_cur"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:gravity="center"
                    tools:text="255"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:text="@string/value_by_max_holder"/>
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_sum_of_plus_stat_max"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:gravity="center"
                    tools:text="400"/>



            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="#30000000">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_item"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/row_slot_item"/>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="#30000000"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="@string/title_magic_item"/>


        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_slot1"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    tools:listitem="@layout/row_slot_magic_item"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_slot2"/>

               <androidx.recyclerview.widget.RecyclerView
                   android:layout_width="wrap_content"
                   android:layout_height="80dp"
                   tools:listitem="@layout/row_slot_magic_item"/>

            </LinearLayout>

        </LinearLayout>


        </LinearLayout>




    </com.google.android.flexbox.FlexboxLayout>




</RelativeLayout>