<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:background="#30000000"
    android:gravity="center">


    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:id="@+id/header_hero_dialog"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/dialog_title_branch"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="전차계"
            android:gravity="center"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_margin="5dp"
            android:id="@+id/dialog_title_branch_grade"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="철거병"
            android:gravity="center"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_margin="5dp"
            android:id="@+id/dialog_title_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:text="고순"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="100dp"
        android:layout_marginTop="50dp"
        android:background="#000">

    </LinearLayout>

<LinearLayout
    android:layout_width="80dp"
    android:layout_height="200dp"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:layout_marginEnd="5dp"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal"
    android:weightSum="2"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_seekbar_hero_grade_value"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                tools:text="4"
                android:gravity="center"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/dialog_grade_unit_holder"
                android:gravity="center"
                android:layout_weight="3"/>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/seekbar_hero_grade"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginStart="-60dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            android:max="4"
            android:progress="3"
            android:progressBackgroundTint="@color/colorPrimary"
            android:progressTint="#00FFEE"
            android:rotation="270"
            android:thumb="@drawable/ic_grade_black_24dp"
            android:thumbTint="#00FFEE" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="@string/title_grade_kor" />



        </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_seekbar_hero_level_value"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            tools:text="99"
            android:gravity="center"/>

        <androidx.appcompat.widget.AppCompatSeekBar
            android:id="@+id/seekbar_hero_level"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginStart="-60dp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="60dp"
            android:max="98"
            android:progressBackgroundTint="@color/colorPrimary"
            android:progressTint="#62A85F"
            android:rotation="270"
            android:thumb="@drawable/ic_favorite_black_24dp"
            android:thumbTint="#62A85F" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="@string/title_level_kor" />




    </LinearLayout>

</LinearLayout>
</RelativeLayout>