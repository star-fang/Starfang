<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10455A"
    android:orientation="vertical"
    tools:context="com.fang.starfang.MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_filter_summary"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="@string/summary_filter" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/conversation_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/row_filter"
        android:scrollbars="vertical"
        tools:listitem="@layout/row_conversation"
        />

    <LinearLayout
        android:id="@+id/row_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/conversationEtLayout"
        android:layout_alignParentEnd="true"
        android:background="@color/design_default_color_primary_dark"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="70dp"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="5dp"
                android:text="@string/filter_title"
                android:textAlignment="center"
                android:textSize="18sp" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switch_filter"
                android:layout_marginStart="5dp"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:checked="true"/>
        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="3dp"
            android:animateLayoutChanges="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/column_filter_sendCat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_filter_sendCat"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:background="@mipmap/ogq4_round" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkbox_filter_sendCat"
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:text="@string/filter_title_sendCat"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/column_filter_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_filter_room"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:background="@mipmap/ogq1_round" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkbox_filter_room"
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:text="@string/filter_title_room"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/column_filter_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_filter_time"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:background="@mipmap/ogq14_round" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkbox_filter_time"
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:text="@string/filter_title_time" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/column_filter_conversation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_filter_conversation"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:background="@mipmap/ogq15_round" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkbox_filter_conversation"
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:text="@string/filter_title_conversation" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/column_filter_package"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_filter_package"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginStart="10dp"
                        android:background="@mipmap/ogq11_round" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkbox_filter_package"
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:text="@string/filter_title_package"
                        android:textSize="12sp" />


                </LinearLayout>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>


        <RelativeLayout
            android:id="@+id/inner_column_filter_sendCat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="80dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="end"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="@color/design_default_color_primary"
                    android:backgroundTint="@color/design_default_color_primary_dark"
                    android:gravity="center"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:text="@string/desc_filter_sendCat"
                    android:textColor="@android:color/background_light"
                    android:textSize="12sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_input_filter_sendCat"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/border"
                    android:backgroundTint="@android:color/background_light"
                    android:textColor="@color/colorPrimaryDark" />


            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_setting_filter_sendCat"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/inner_column_filter_room"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_input_filter_room"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/border"
                android:backgroundTint="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_setting_filter_room"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/inner_column_filter_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_input_filter_time_desc"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="10dp"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/inner_column_filter_conversation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_input_filter_conversation"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/border"
                android:backgroundTint="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_setting_filter_conversation"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/inner_column_filter_package"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_input_filter_package"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/border"
                android:backgroundTint="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_setting_filter_package"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp" />
        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/conversationEtLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_conversation"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:textSize="18sp" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/text_conversation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="80dp"
            android:layout_toEndOf="@id/title_conversation"
            android:focusedByDefault="false"
            android:hint="@string/et_conversation_hint"
            tools:targetApi="o" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_clear_conversation"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="14dp"
            android:layout_toStartOf="@id/button_conversation"
            android:background="@android:drawable/ic_menu_close_clear_cancel"
            android:padding="5dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_conversation"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/krona_one"
            android:text="@string/filter_button_title_submit"
            android:textSize="14sp" />

    </RelativeLayout>


</RelativeLayout>