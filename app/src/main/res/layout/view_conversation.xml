<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fang.starfang.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/conversation_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_above="@id/conversationEtLayout"
        tools:listitem="@layout/row_conversation"
        />

    <TextView
        android:layout_width="40dp"
        android:layout_height="20dp"
        android:layout_above="@id/row_filter_sendCat"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@color/colorPrimaryDark"
        android:padding="0dp"
        android:text="@string/filter_title"
        android:textAlignment="center" />

    <LinearLayout
        android:id="@+id/row_filter_sendCat"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_above="@id/row_filter_room"
        android:layout_alignParentEnd="true"
        android:background="@android:color/background_dark"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkbox_filter_sendCat"
                android:layout_marginTop="15dp"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:padding="0dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_filter_sendCat"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/OGQ4_round"
            android:layout_above="@+id/title_filter_sendCat"
            android:layout_toEndOf="@id/checkbox_filter_sendCat"/>

            <TextView
                android:id="@+id/title_filter_sendCat"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="@string/filter_title_sendCat"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_toEndOf="@id/checkbox_filter_sendCat"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

    <LinearLayout
        android:id="@+id/inner_row_filter_sendCat"
        android:layout_marginTop="10dp"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/text_input_filter_sendCat"
            android:layout_marginStart="10dp"
            android:layout_height="40dp"
            android:layout_width="150dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_input_filter_sendCat"
            android:layout_width="30dp"
            android:layout_height="30dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_remove_filter_sendCat"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
    </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/row_filter_room"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_above="@id/row_filter_time"
        android:layout_alignParentEnd="true"
        android:background="@android:color/background_dark"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkbox_filter_room"
                android:layout_marginTop="15dp"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:padding="0dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_filter_room"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/OGQ1_round"
                android:layout_above="@+id/title_filter_room"
                android:layout_toEndOf="@id/checkbox_filter_room"/>

            <TextView
                android:id="@+id/title_filter_room"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="@string/filter_title_room"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_toEndOf="@id/checkbox_filter_room"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/inner_row_filter_room"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/text_input_filter_room"
                android:layout_marginStart="10dp"
                android:layout_height="40dp"
                android:layout_width="150dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_input_filter_room"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_remove_filter_room"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/row_filter_time"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:background="@android:color/background_dark"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkbox_filter_time"
                android:layout_marginTop="15dp"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:padding="0dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_filter_time"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/OGQ14_round"
                android:layout_above="@+id/title_filter_time"
                android:layout_toEndOf="@id/checkbox_filter_time"/>

            <TextView
                android:id="@+id/title_filter_time"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:text="@string/filter_title_time"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_toEndOf="@id/checkbox_filter_time"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/inner_row_filter_time"
            android:layout_marginTop="10dp"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/text_input_filter_time_after"
                android:layout_marginStart="10dp"
                android:layout_height="40dp"
                android:layout_width="150dp"
                android:inputType="date"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_input_filter_time"
                android:layout_width="30dp"
                android:layout_height="30dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_remove_filter_time"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_filter_conversation"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/row_filter_time"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@mipmap/OGQ15_round"
        android:padding="0dp" />

    <Button
        android:id="@+id/button_filter_package"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/button_filter_conversation"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@mipmap/OGQ11_round"
        android:padding="0dp" />



    <RelativeLayout
        android:id="@+id/conversationEtLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/et_conversation"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginEnd="5dp"
            android:autofillHints=""
            android:focusedByDefault="false"
            android:hint="@string/et_conversation_hint"
            android:inputType="textNoSuggestions"
            tools:targetApi="o" />

        <ExpandableListView
            android:layout_width="120dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>





</RelativeLayout>