<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/conversation_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/row_filter"
        android:scrollbars="vertical"
        tools:listitem="@layout/row_conversation" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/row_filter"
        android:layout_alignParentEnd="true">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_show_filters"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="#66000000"
            android:fontFamily="@font/krona_one"
            android:text="@string/title_filter"
            android:textSize="12sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/row_filter"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_above="@id/conversationEtLayout"
        android:layout_alignParentEnd="true"
        android:orientation="vertical"
        android:weightSum="1">


    <RelativeLayout
        android:id="@+id/inner_column_filter"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/design_default_color_primary_dark"
        android:orientation="horizontal">


        <HorizontalScrollView
            android:id="@+id/scroll_filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/column_filter_sendCat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:orientation="vertical"
                    >

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_filter_sendCat"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="3dp"
                        android:background="@mipmap/ogq4_round" />

                    <androidx.appcompat.widget.AppCompatCheckedTextView
                        android:id="@+id/checkbox_filter_sendCat"
                        android:layout_width="65dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:checked="false"
                        android:text="@string/filter_title_sendCat"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/column_filter_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_filter_room"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="3dp"
                        android:background="@mipmap/ogq1_round" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkbox_filter_room"
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/filter_title_room"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/column_filter_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_filter_time"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="3dp"
                        android:background="@mipmap/ogq14_round" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkbox_filter_time"
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/filter_title_time" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/column_filter_conversation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_filter_conversation"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="3dp"
                        android:background="@mipmap/ogq15_round" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkbox_filter_conversation"
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/filter_title_conversation" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/column_filter_package"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="100dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/button_filter_package"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="3dp"
                        android:background="@mipmap/ogq11_round" />

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/checkbox_filter_package"
                        android:layout_width="70dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/filter_title_package"
                        android:textSize="12sp" />


                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="#66000000">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_hide_filters"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:background="@drawable/ic_keyboard_arrow_down_pink_24dp" />

        </LinearLayout>

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/inner_column_filter_sendCat"
            android:animateLayoutChanges="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:background="#000000">

            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="50dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/text_filter_sendCat_count"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@android:color/background_light"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    android:gravity="center"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:backgroundTint="@android:color/background_light"
                    android:maxLines="1"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:text="@string/sendcat_count_holder"/>


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="5dp">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_filter_sendCat_count_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:maxLines="1"
                        android:background = "#10FFFFFF"
                        android:textColor="#FFF"
                        android:textSize="15sp"
                        android:gravity="center"/>

                </HorizontalScrollView>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_filter_sendCat_commit"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@color/design_default_color_primary"
                android:backgroundTint="@color/design_default_color_primary_dark"
                android:gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_alignParentBottom="true"
                android:text="@string/desc_filter_sendCat"
                android:textColor="@android:color/background_light"
                android:maxLines="1"
                android:textSize="12sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/inner_column_filter_room"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:animateLayoutChanges="true">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_input_filter_room"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/border"
                android:backgroundTint="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_setting_filter_room"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp" />
        </RelativeLayout>

        <RelativeLayout
        android:id="@+id/inner_column_filter_time"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0"
        android:animateLayoutChanges="true">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_input_filter_time_before"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_input_filter_time_after"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@id/text_input_filter_time_before"
            android:textSize="12sp" />

    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/inner_column_filter_conversation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:animateLayoutChanges="true">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_input_filter_conversation"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/border"
                android:backgroundTint="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_setting_filter_conversation"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/inner_column_filter_package"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0"
            android:animateLayoutChanges="true">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_input_filter_package"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/border"
                android:backgroundTint="@android:color/background_light"
                android:textColor="@color/colorPrimaryDark" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_setting_filter_package"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="10dp" />
        </RelativeLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="135dp"
        android:background="#66000000"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/summary_filter"
            android:gravity="center"
            android:layout_gravity="center"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="5dp"
            android:background="#80FFFFFF"

            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_filter_summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollHorizontally="true"
                android:text="@string/desc_no_filter"
                android:textColor="@color/colorPrimaryDark"
                android:textIsSelectable="true"
                tools:text="@tools:sample/lorem[2]" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/conversationEtLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimaryDark">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/title_conversation"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:textSize="18sp"
            android:text="@string/tab_text_3"/>


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/text_conversation"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginEnd="80dp"
            android:layout_toEndOf="@id/title_conversation"
            android:focusedByDefault="false"
            android:hint="@string/et_conversation_hint"
            tools:targetApi="o" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_clear_conversation"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="14dp"
            android:layout_toStartOf="@id/button_conversation"
            android:background="@android:drawable/ic_menu_close_clear_cancel"
            android:padding="5dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_conversation"
            android:layout_width="75dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="@font/krona_one"
            android:text="@string/filter_button_title_submit"
            android:textSize="13sp" />

    </RelativeLayout>


</RelativeLayout>