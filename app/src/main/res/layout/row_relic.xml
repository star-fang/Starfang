<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:gravity="center_vertical">

    <androidx.appcompat.widget.AppCompatCheckBox
        android:layout_margin="5dp"
        android:id="@+id/checkbox_relic"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_toEndOf="@id/checkbox_relic"
        android:id="@+id/text_relic_id"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:text="302424"
        android:gravity="center"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_toEndOf="@id/text_relic_id"
        android:id="@+id/text_relic_prefix"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:text = "강인한"
        android:gravity="center"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_relic_hero"
        android:layout_toEndOf="@id/text_relic_prefix"
        android:layout_toStartOf="@id/button_confirm_relic"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:text="금환삼결"
        android:gravity="center_vertical"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/button_confirm_relic"
        android:layout_toStartOf="@id/button_remove_relic"
        android:layout_marginEnd="10dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_check_pink_24dp"
        android:tint="#FFF"
        android:background="#00000000"/>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/button_remove_relic"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_delete_forever_black_24dp"
        android:tint="#FFF"
        android:background="#00000000"/>
</RelativeLayout>