<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="210dp"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="1dp">

        <LinearLayout
            android:layout_margin="2dp"
            android:id="@+id/cell_hero_weapon"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/rect_black">
        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="@string/weapon"
            />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_item_weapon_reinforcement"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            tools:text="+12"
            android:gravity="center" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_item_weapon_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            tools:text="관우의 청룡언월도"
            android:gravity="center"/>

        </LinearLayout>



        <LinearLayout
            android:layout_margin="2dp"
            android:id="@+id/cell_hero_armor"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/rect_black">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="@string/shield"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_item_armor_reinforcement"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                tools:text="+9"
                android:gravity="center" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_item_armor_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                tools:text="관우의 청동쇄자갑"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_margin="2dp"
            android:id="@+id/cell_hero_aid"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/rect_black">
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:gravity="center"
                android:text="@string/aid"
                />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_item_aid_reinforcement"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                tools:text="+19"
                android:gravity="center" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_item_aid_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                tools:text="관우의 적토마"
                android:gravity="center"/>

        </LinearLayout>


    </LinearLayout>





</LinearLayout>