<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginBottom="120dp"
        android:layout_alignParentBottom="true">

    <Switch
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:defaultValue="false"
        android:id="@+id/notifications_start"
        android:text="@string/pref_title_notifications_start"
        android:layout_centerVertical="true"
        android:layout_marginEnd="90dp"
        android:layout_marginStart="20dp"/>

        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <Button
                android:id="@+id/notifications_setting"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:background="@drawable/ic_notifications_black_24dp"
                android:backgroundTint="@color/ic_launcher_background"
                android:padding="10dp" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:gravity="center_horizontal"
                android:text="@string/pref_title_notifications_setting"
                android:layout_below="@id/notifications_setting"
                android:layout_alignParentBottom="true"
                >
            </TextView>
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true">

<TextView
    android:layout_marginStart="20dp"
    android:layout_width="40dp"
    android:layout_height="80dp"
    android:text="@string/pref_title_sync_host"
    android:gravity="center"
    android:layout_centerVertical="true"
    >
</TextView>

    <EditText
        android:layout_height="80dp"
        android:layout_width="match_parent"
        android:text="@string/host_address_1"
        android:id="@+id/text_address"
        android:icon="@drawable/ic_info_black_24dp"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="90dp"/>


    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">

        <Button
            android:id="@+id/start_sync_key_all"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginStart="20dp"
            android:background="@drawable/ic_sync_black_24dp"
            android:backgroundTint="@color/ic_launcher_background"
            android:padding="10dp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:gravity="center_horizontal"
            android:text="@string/pref_title_sync_kor"
            android:layout_below="@id/start_sync_key_all"
            android:layout_alignParentBottom="true">
        </TextView>



    </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>